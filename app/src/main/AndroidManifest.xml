<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.localloop">

    <application
        android:allowBackup="true"
        android:label="LocalLoop"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LocalLoop">

        <!-- Main activity with android:exported=true -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.AdminActivity" />
        <activity android:name=".ui.OrganizerActivity" />
        <activity android:name=".ui.ParticipantActivity" />

    </application>

</manifest>
