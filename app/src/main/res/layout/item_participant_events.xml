<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_participant_event_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Owner Email" />

        <TextView
            android:id="@+id/text_participant_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name" />

        <TextView
            android:id="@+id/text_participant_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Description" />

        <TextView
            android:id="@+id/text_participant_event_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Category" />

        <TextView
            android:id="@+id/text_participant_event_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Fee" />

        <TextView
            android:id="@+id/text_participant_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Date" />

        <TextView
            android:id="@+id/text_participant_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Time" />

        <Button
            android:id="@+id/btn_participant_event_join_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request to Join" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>