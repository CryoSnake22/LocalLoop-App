<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_user_item_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name" />

        <TextView
            android:id="@+id/text_user_item_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />

        <TextView
            android:id="@+id/text_user_item_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Role" />

        <TextView
            android:id="@+id/text_user_item_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name" />

        <TextView
            android:id="@+id/text_user_item_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name" />

        <TextView
            android:id="@+id/text_user_item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:" />

        <Button
            android:id="@+id/btn_user_item_disable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable User" />

        <Button
            android:id="@+id/btn_user_item_enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable User" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>