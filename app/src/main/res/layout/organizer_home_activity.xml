<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="24dp"
  android:gravity="center"
  android:orientation="vertical"
  android:background="@color/white"
  android:fitsSystemWindows="true">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:gravity="end"
      android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textAllCaps="false"
        app:icon="@drawable/ic_logout"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="20dp" />
  </LinearLayout>

  <ImageView
    android:id="@+id/image_organizer_logo"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_user"
    android:layout_marginBottom="16dp" />

  <TextView
    android:id="@+id/text_organizer_welcome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello, Organizer"
    android:textSize="26sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:gravity="center"
    android:layout_marginBottom="4dp" />

  <TextView
    android:id="@+id/text_organizer_subtitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Manage your events and participant requests"
    android:textSize="14sp"
    android:textColor="#666666"
    android:gravity="center"
    android:layout_marginBottom="32dp" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btn_organizer_manage_events"
    style="?attr/materialButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Manage Events"
    app:icon="@drawable/ic_event"
    app:iconGravity="textStart"
    app:iconPadding="8dp"
    app:iconSize="24dp" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btn_organizer_pending_request"
    style="?attr/materialButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Pending Requests"
    android:layout_marginTop="12dp"
    app:icon="@drawable/ic_pending"
    app:iconGravity="textStart"
    app:iconPadding="8dp"
    app:iconSize="24dp" />
</LinearLayout>



