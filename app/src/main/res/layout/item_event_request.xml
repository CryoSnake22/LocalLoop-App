<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_event_request_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name" />

        <TextView
            android:id="@+id/text_event_request_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Email" />

        <TextView
            android:id="@+id/text_event_request_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name" />

        <TextView
            android:id="@+id/text_event_request_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lastname" />

        <Button
            android:id="@+id/btn_event_request_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept" />

        <Button
            android:id="@+id/btn_event_request_declien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="decline" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>